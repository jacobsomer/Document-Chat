generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Video {
    youtubeId String @id
    createdAt DateTime @default(now())
    title String
    transcriptBytes Bytes @db.ByteA
}

